@page
@model ResgistroUsuario.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Consulta</h1>

<p>
    <a asp-page="Create">Registrar Usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegistroU[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistroU[0].Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistroU[0].Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistroU[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistroU[0].Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.RegistroU) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
